<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Warna saat ditekan -->
            <corners android:radius="10dp" /> <!-- Sudut melengkung -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Hilangkan outline -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Warna default -->
            <corners android:radius="10dp" /> <!-- Sudut melengkung -->
            <stroke android:width="0dp" android:color="@android:color/transparent" /> <!-- Hilangkan outline -->
        </shape>
    </item>
</selector>
